<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#444444"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/SessionTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Session Title"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Session_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SessionTitle"
            android:text="11/18/2019"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Session_Number_Uploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Session_Date"
            android:text="22 of 22 Uploaded"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photoPreview1"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/SessionTitle"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/photoPreview2"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/photoPreview1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/photoPreview3"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_toRightOf="@id/photoPreview2"
            android:src="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="3dp"
            android:layout_toLeftOf="@id/imageButton5"
            android:background="#333333"
            app:srcCompat="@drawable/continuesession" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/imageButton6"
            android:background="#333333"
            app:srcCompat="@drawable/upload" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:background="#333333"
            app:srcCompat="@drawable/delete1" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>